<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="boardService" class="com.cramcoder.board.service.BoardServiceImpl" />
	
	<bean class="com.cramcoder.board.controller.ListController">
		<property name="boardService" ref="boardService"></property>
	</bean>
	
	<bean class="com.cramcoder.board.controller.WriteController">
		<property name="boardService" ref="boardService"></property>
	</bean>
	
	<bean class="com.cramcoder.board.controller.ReadController">
		<property name="boardService" ref="boardService"></property>	
	</bean>
	
	<bean class="com.cramcoder.board.controller.UpdateController">
		<property name="boardService" ref="boardService"></property>	
	</bean>
	<bean class="com.cramcoder.board.controller.DeleteController">
		<property name="boardService" ref="boardService"></property>	
	</bean>
	<bean class="mybatis.BoardManager"></bean>
	
	<bean class="com.cramcoder.member.controller.RegisterController"/>
	
	<bean class="com.cramcoder.member.controller.MainController"/>
</beans>
