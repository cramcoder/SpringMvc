<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  

  
  
 	<!-- contextLoaderListener의 초기값 설정을 바꿀때  --> 
	<context-param>
	    <param-name>contextConfigLocation</param-name>
	    <param-value>
	        /WEB-INF/conf/applicationContext.xml	
	    </param-value>
	</context-param>
	
	  <listener>
   <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

<servlet>
	<servlet-name>chap02</servlet-name>
	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	<init-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/conf/handler-config.xml
			/WEB-INF/conf/bean-config.xml
			/WEB-INF/conf/view-config.xml
		</param-value>
	</init-param>
</servlet>
<servlet-mapping>
	<servlet-name>chap02</servlet-name>
	<url-pattern>/</url-pattern><!-- 모든 접미사 통과를 할 수 있게 만들어준다. -->
</servlet-mapping>
</web-app>


